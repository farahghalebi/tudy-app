<!--app/view/todos/index.html.erb-->
  <% if @journal %>
    <h1><%= @journal.title %></h1>
  <% else %>
    <h1>My To-Do List</h1>
  <% end %>

<ul class="list-unstyled">
  <%= render @todos %>
</ul>

<% if params[:journal_id].present? %>
  <%= link_to "<", todo_brief_journal_path(params[:journal_id]) %>
<% else %>
  <%= link_to "< Back", root_path %>
<% end %>
