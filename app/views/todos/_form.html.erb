<!--app/views/todos/_form.html.erb-->

<%= form_with(model: todo, local: true, html: { class: "post-it-form" }) do |form| %>
  <%= hidden_field_tag :journal_id, params[:journal_id] %>

  <%= form.label :title, class: "ai-output" %>
  <%= form.text_field :title, class: "post-it-input", placeholder: "Titel" %>

  <%= form.label :description, class: "ai-output" %>
  <%= form.text_field :description, class: "post-it-input", placeholder: "Description" %>

  <%= form.label :due_date, class: "ai-output" %>
  <%= form.date_field :due_date, class: "post-it-input" %>

  <%= form.label :tag, "Category", class: "ai-output" %>
  <%= form.select :tag, TodosController::PREDEFINED_CATEGORIES, { include_blank: "Select a category" }, { class: "post-it-input" } %>

  <%= form.submit "Add", class: "btn" %>
<% end %>
