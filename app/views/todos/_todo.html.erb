<!--app/views/todos/_todo.html.erb-->
<li id="<%= dom_id(todo) %>">
  <%= form_with(model: todo, url: todo_path(todo), method: :patch, data: { turbo: true }) do |form| %>
    <%= form.check_box :status, onchange: "this.form.requestSubmit()" %>
  <% end %>
  <span class="user-content"><%= todo.title %></span>
  <%= link_to "✏️", edit_todo_path(todo), class: "ai-output" %>
  <%= link_to "❌", todo_path(todo),
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "ai-output"  %>
</li>
