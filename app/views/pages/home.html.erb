<div
  data-controller="swipe"
  data-swipe-left-url-value="<%= new_journal_path %>"
  data-swipe-up-url-value="<%= journals_path %>"
  style="min-height:100vh;"
>
<% content_for :body_class, "crumbled-paper" %>
<div class="journal-new-page">
  <h1>Tudy...</h1>
  <div class="handwritten-user">
    <p>... helps you TODO things smarter! </p>
    <p>Just write down your journal about the day and see magic happen... </p>
    <p><strong>swipe right</strong> to start... </p>
    <p><strong>swipe down</strong> to check all your journals...</p>
  </div>
  <div class="swipe-button-box right">
    <% if params[:journal_id] %>
      <%= link_to "Journal", journal_path(params[:journal_id]), class: "button-swipe" %>
    <% else %>
      <%= link_to "New Journal", new_journal_path, class: "button-swipe right" %>
    <% end %>
  </div>

  <div class="swipe-button-box down">
    <%= link_to "All Journals", journals_path, class: "button-swipe" %>
  </div>
</div>
